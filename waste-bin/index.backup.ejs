<body>
	<script type="text/javascript">

	// const dotenv = require('dotenv').config();
	// const forwardingAddress = process.env.FORWARDING_ADDRESS;
	
	ShopifyApp.ready(function(){
		ShopifyApp.Bar.initialize({
			title: 'Welcome',
			icon: '/images/logo.png',
			buttons: {
				primary: {
					label: "Products",
					message: 'bar_save',
					href: forwardingAddress+'/static/products.html'
				},
				secondary: [
					// Dropdown example
					{ 
						label: "More",
						type: "dropdown",
						links: [
							// Link Button that opens in the app
							{ label: "Update", href: "/product", target: "app" },
							// Button with a callback function
							{ label: "Delete", callback: function(){ alert("destroy") } }
						]
					},
					{ 
						// Link Button that opens in a new window
						label: "Preview", href: shopOrigin, 
						target: "new" 
					},
					{ 
						label: "Upload Image", 
						callback: function() {
							ShopifyApp.Modal.open({
							  src: forwardingAddress+'/modal_content',
							  title: 'Upload Image',
							  width: 'small',
							  height: 300,
							  buttons: {
							    primary: { label: "OK", callback: function (label) { ShopifyApp.Modal.close(); } },
							    secondary: [
							      { label: "Cancel", callback: function (label) { ShopifyApp.Modal.close(); } }
							    ]
							  }
							});
						}
					}
				]
			}
		});
		ShopifyApp.Bar.loadingOff();

	});
	</script>
